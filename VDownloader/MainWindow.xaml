<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VDownloader"
        xmlns:Properties="clr-namespace:VDownloader.Properties" x:Name="window" x:Class="VDownloader.MainWindow"
        mc:Ignorable="d"
        Title="VDownloader" Height="450" Width="800" WindowStyle="None" AllowsTransparency="True" Background="Transparent">
    <Grid Style="{StaticResource WindowGridStyle}">
        <Grid.RowDefinitions>
            <RowDefinition Height="{x:Static SystemParameters.WindowCaptionHeight}"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" x:Name="TitleBar" MouseDown="TitleBar_MouseDown">
            <Image Width="{x:Static SystemParameters.SmallIconWidth}" Height="{x:Static SystemParameters.SmallIconHeight}" Source="{Binding Icon, ElementName=window}" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0" />
            <TextBlock VerticalAlignment="Center" Margin="36,8,0,0" HorizontalAlignment="Left">VDownloader</TextBlock>
            <Button Style="{StaticResource TitleBarButtonClose}" Content="&#xE106;"  x:Name="CloseButton" Click="CloseButton_Click"/>
        </Grid>
    </Grid>
</Window>