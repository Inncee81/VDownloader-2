<Page x:Class="VDownloader.DownloadingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VDownloader"
      xmlns:akiravoid="clr-namespace:AkiraVoid"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DownloadingPage"
      Loaded="Page_Loaded">

    <StackPanel>
        <ListBox BorderThickness="0">
            <ListBoxItem Style="{StaticResource DownloadItems}" akiravoid:DownloadListButtonProperty.PauseButtonIsEnabled="True"></ListBoxItem>
            <ListBoxItem Style="{StaticResource DownloadItems}" akiravoid:DownloadListButtonProperty.PauseButtonIsEnabled="False"></ListBoxItem>
        </ListBox>
    </StackPanel>
</Page>
